{
    "name": "invoice/api",
    "type": "project",
    "description": "Invoice API",
    "keywords": [],
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "eusonlito/disposable-email-validator": "^0.1",
        "eusonlito/laravel-packer": "^2.1",
        "friendsofphp/php-cs-fixer": "^2.16",
        "fzaninotto/faker": "master",
        "h4cc/wkhtmltopdf-amd64": "^0.12",
        "laravel/framework": "^6.5",
        "laravel/helpers": "^1.1",
        "mikehaertl/phpwkhtmltopdf": "^2.4",
        "predis/predis": "^1.1",
        "sentry/sentry-laravel": "^1.4",
        "tymon/jwt-auth": "^1.0"
    },
    "require-dev": {
        "nunomaduro/larastan": "^0.4",
        "nunomaduro/phpinsights": "^1.11",
        "phpunit/phpunit": "^8.4"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "database/migrations"
        ],
        "psr-4": {
            "App\\": "app/",
            "Database\\": "database/"
        },
        "files": [
            "app/Services/Helper/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "pre-install-cmd": [
            "rm -f bootstrap/cache/*.php"
        ],
        "pre-update-cmd": [
            "rm -f bootstrap/cache/*.php"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-install-cmd": [
            "@php artisan config:cache",
            "@php artisan route:cache",
            "@php artisan queue:restart",
            "./vendor/bin/php-cs-fixer fix"
        ],
        "post-update-cmd": [
            "./vendor/bin/php-cs-fixer fix"
        ]
    }
}
